<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
    <id>mohaa:teams</id>
    <name>MOHAA Teams</name>
    <version>1.0.0</version>
    <type>modification</type>
    
    <install for="2.1.0 - 2.1.*">
        <readme>readme.txt</readme>
        <require-package id="mohaa:stats_core" version="1.0.0">MOHAA Stats Core is required</require-package>
        
        <database>install_teams.php</database>
        
        <require-file name="Sources/MohaaTeams.php" destination="$sourcedir" />
        <require-file name="Themes/default/MohaaTeams.template.php" destination="$themedir" />
        
        <hook hook="integrate_actions" function="MohaaTeams_Actions" file="$sourcedir/MohaaTeams.php" />
        <hook hook="integrate_profile_areas" function="MohaaTeams_ProfileAreas" file="$sourcedir/MohaaTeams.php" />
    </install>
    
    <uninstall for="2.1.0 - 2.1.*">
        <database>uninstall_teams.php</database>
        <remove-file name="$sourcedir/MohaaTeams.php" />
        <remove-file name="$themedir/MohaaTeams.template.php" />
        <hook hook="integrate_actions" function="MohaaTeams_Actions" file="$sourcedir/MohaaTeams.php" reverse="true" />
        <hook hook="integrate_profile_areas" function="MohaaTeams_ProfileAreas" file="$sourcedir/MohaaTeams.php" reverse="true" />
    </uninstall>
</package-info>
