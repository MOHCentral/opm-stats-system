<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
    <id>mohaa:achievements</id>
    <name>MOHAA Achievements &amp; Medals</name>
    <version>1.0.0</version>
    <type>modification</type>
    
    <install for="2.1.0 - 2.1.*">
        <readme>readme.txt</readme>
        <require-package id="mohaa:stats_core" version="1.0.0">MOHAA Stats Core is required</require-package>
        
        <database>install_achievements.php</database>
        
        <require-file name="Sources/MohaaAchievements.php" destination="$sourcedir" />
        <require-file name="Themes/default/MohaaAchievements.template.php" destination="$themedir" />
        <require-file name="Themes/default/css/mohaa_achievements.css" destination="$themedir/css" />
        
        <hook hook="integrate_actions" function="MohaaAchievements_Actions" file="$sourcedir/MohaaAchievements.php" />
        <hook hook="integrate_profile_areas" function="MohaaAchievements_ProfileAreas" file="$sourcedir/MohaaAchievements.php" />
    </install>
    
    <uninstall for="2.1.0 - 2.1.*">
        <database>uninstall_achievements.php</database>
        <remove-file name="$sourcedir/MohaaAchievements.php" />
        <remove-file name="$themedir/MohaaAchievements.template.php" />
        <remove-file name="$themedir/css/mohaa_achievements.css" />
    </uninstall>
</package-info>
