<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
    <id>mohaa:servers</id>
    <name>MOHAA Server Stats</name>
    <version>1.0.0</version>
    <type>modification</type>
    
    <install for="2.1.0 - 2.1.*">
        <readme>readme.txt</readme>
        <require-package id="mohaa:stats_core" version="1.0.0">MOHAA Stats Core is required</require-package>
        
        <require-file name="Sources/MohaaServers.php" destination="$sourcedir" />
        <require-file name="Themes/default/MohaaServers.template.php" destination="$themedir" />
        
        <hook hook="integrate_actions" function="MohaaServers_Actions" file="$sourcedir/MohaaServers.php" />
    </install>
    
    <uninstall for="2.1.0 - 2.1.*">
        <remove-file name="$sourcedir/MohaaServers.php" />
        <remove-file name="$themedir/MohaaServers.template.php" />
        <hook hook="integrate_actions" function="MohaaServers_Actions" file="$sourcedir/MohaaServers.php" reverse="true" />
    </uninstall>
</package-info>
