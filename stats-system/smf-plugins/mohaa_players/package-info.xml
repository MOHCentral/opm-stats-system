<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
    <id>mohaa:players</id>
    <name>MOHAA Player Stats</name>
    <version>1.0.0</version>
    <type>modification</type>
    
    <install for="2.1.0 - 2.1.*">
        <readme>readme.txt</readme>
        
        <!-- Requires core plugin -->
        <require-package id="mohaa:stats_core" version="1.0.0">MOHAA Stats Core is required</require-package>
        
        <!-- Source files -->
        <require-file name="Sources/MohaaPlayers.php" destination="$sourcedir" />
        
        <!-- Templates -->
        <require-file name="Themes/default/MohaaPlayers.template.php" destination="$themedir" />
        <require-file name="Themes/default/MohaaDashboard.template.php" destination="$themedir" />
        
        <!-- Hook integrations -->
        <hook hook="integrate_actions" function="MohaaPlayers_Actions" file="$sourcedir/MohaaPlayers.php" />
        <hook hook="integrate_profile_areas" function="MohaaPlayers_ProfileAreas" file="$sourcedir/MohaaPlayers.php" />
    </install>
    
    <uninstall for="2.1.0 - 2.1.*">
        <remove-file name="$sourcedir/MohaaPlayers.php" />
        <remove-file name="$themedir/MohaaPlayers.template.php" />
        <remove-file name="$themedir/MohaaDashboard.template.php" />
        
        <hook hook="integrate_actions" function="MohaaPlayers_Actions" file="$sourcedir/MohaaPlayers.php" reverse="true" />
        <hook hook="integrate_profile_areas" function="MohaaPlayers_ProfileAreas" file="$sourcedir/MohaaPlayers.php" reverse="true" />
    </uninstall>
</package-info>
